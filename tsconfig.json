{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/web/components"],
      "@constants/*": ["src/web/constants"],
      "@hooks/*": ["src/web/hooks"],
      "@layouts/*": ["src/web/layouts"],
      "@pages/*": ["src/web/pages"],
      "@store/*": ["src/web/store"],
      "@utils/*": ["src/web/utils"],
    }
  },
  "include": ["src"]
}
